rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Releases: public read for Sparkle auto-updates
    match /releases/{allPaths=**} {
      allow read;
      allow write: if request.auth != null;
    }

    // Default: deny all
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}